<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/helloWorldFragment">

    <fragment
        android:id="@+id/helloWorldFragment"
        android:name="com.example.mvrx_project.helloworld.HelloWorldFragment"
        android:label="hello_fragment"
        tools:layout="@layout/hello_fragment"
        >
        <action
            android:id="@+id/action_helloWorldFragment_to_secondFragment"
            app:destination="@id/secondFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/secondFragment"
        tools:layout="@layout/second_fragment"
        android:name="com.example.mvrx_project.secondscreen.SecondFragment"
        android:label="SecondFragment" >
        <action
            android:id="@+id/action_secondFragment_to_helloWorldFragment"
            app:destination="@id/helloWorldFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
</navigation>